{
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "module": "es2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "inlineSources": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "files": [
    "./src/rich-input.ts",
    "./src/note-app.ts",
    "./src/swipe.ts",
    "./src/list.ts",
    "./src/grid.ts"
  ]
}
